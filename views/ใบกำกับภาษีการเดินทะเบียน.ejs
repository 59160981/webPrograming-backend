            <li><a href="./login.html">ออกจากระบบ</a></li>


    </ul>

    <!-- --------code---------- -->
    <h3><u>ใบกำกับภาษีการเดินทะเบียน</u></h3>

    <section class="main">
        <section id="print">
            <div class="column1" style="text-align: right">
                <div style="margin-right: 25vh;">

                    เล่มที่ : <u><%= invoice.ID_invoice %></u>
                    <br />
                    <br />
                    เลขที่ : <u><%= regis.ID_registration %></u>
                    <br />
                    <br />
                    วันที่ : <u><%= regis.date %></u>

                </div>
            </div>
            <div class="column1">
                <div style="margin-left: 25vh;">

                    บริษัท : <u>Diamond Development</u>
                    <br />
                    <br>
                    เลขที่ : <u>38103810298</u>
                    <br />
                    <br>
                    เบอร์โทร : <u>032784728</u>
                    <br />
                    <br>
                    ชื่อผู้ซื้อ : <u><%= custo.firstname %> <%= custo.lastname %></u>
                    <br />
                    <br>
                    ที่อยู่ : <u><%= custo.address %> </u>
                    <br>
                    <br>
                </div>
            </div>

            <table style="width:70%;margin-left: 15%;margin-right: 15%; ">
                <tr>
                    <th style=" text-align :center">ลำดับ</th>
                    <th style=" text-align :center">รายการ</th>
                    <th style=" text-align :center">จำนวน</th>
                    <th style=" text-align :center">ราคาต่อหน่วย</th>
                    <th style=" text-align :center">จำนวน</th>
                </tr>
                <% var sum = 0 %>
                    <% for(var i=0; i < orderde.length; i++) { %>
                    <tr>
                        <td style="text-align: center;"><%= i+1 %></td>
                        <td style="text-align: center;"><%= orderde[i].ID_product %></td>
                        <td style="text-align: center;"><%= orderde[i].amount %></td>
                        <td style="text-align: center;"><%= orderde[i].price %></td>
                        <td style="text-align: center;"><%= orderde[i].amount * orderde[i].price %></td>
                    </tr>
                    <%  sum += orderde[i].amount * orderde[i].price %>
                    <% } %>
                <tr id="t01">
                    <td colspan="4" style="text-align :right">ราคารวมทั้งสิ้น</td>
                    <td style="text-align: center;"><%= sum %></td>
                </tr>
                <tr id="t01">
                    <td colspan="4" style="text-align :right">ภาษีมูลค่าเพิ่ม 7%</td>
                    <td style="text-align: center;"><%= sum*0.07 %></td>
                </tr>
                <tr id="t01">
                    <td colspan="4" style="text-align :right">จำนวนเงินรวมทั้งหมด</td>
                    <td style="text-align: center;"><%= sum+(sum*0.07) %></td>
                </tr>
            </table>
            <div class="column" style="width: 97%;">
                <div style="margin-left: 25vh;">
                    <form>
                        ลงชื่อ:______________________ผู้รับสินค้า

                        <span style="margin-left: 20%">ลงชื่อ:______________________ช่างซ่อม</span>
                        <br />
                    </form>
                </div>
            </div>
            <div class="column" style="text-align: center; width: 97%;">
                <button class="button1" style="margin-right: 30px" onclick="printDiv()">พิมพ์</button>
                <button class="button2" onclick="location.href='/home'">ต่อไป</button>
            </div>
        </section>
    </section>

    <!-- footer -->

    <div class="footer">
        © 2019 Diamond Development
    </div>
</body>

</html>